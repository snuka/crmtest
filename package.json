{
  "name": "simple-crm",
  "version": "1.0.0",
  "description": "A simple CRM service with PostgreSQL database",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm install && npm run build",
    "postinstall": "npm run build",
    "test-crud": "ts-node src/test-crud.ts",
    "db-init": "ts-node src/db-init.ts",
    "verify-db": "ts-node src/verify-db.ts",
    "db-init-step": "ts-node src/db-init-step-by-step.ts",
    "test-auth": "ts-node src/test-auth.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/jsonwebtoken": "^9.0.9",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "@types/pg": "^8.10.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
